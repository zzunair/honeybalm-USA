<style>
.all_ps ul.splide__list.w-full {
    flex-wrap: wrap;
    gap: 30px;
}
 .all_ps  li.plist.splide__slide {
    width: calc(25% - 23px);
}
   .all_ps .pcontent-wrap {
    padding: 16px 0px;
}
  .all_ps .vr1{
    display: none;
  }
@media only screen and (max-width: 1200px) {
  .all_ps li.plist.splide__slide {
      width: calc(33.33% - 20px);
  }
}
@media only screen and (max-width: 990px){
  .all_ps li.plist.splide__slide {
      width: calc(50% - 15px);
  }
