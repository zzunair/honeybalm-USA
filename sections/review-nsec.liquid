<script>
  document.querySelector('.prdct-rev-text').addEventListener('click', function(){
    // Get the position of the element
    const element = document.querySelector(".rev2-sec");
    const offset = 100; // Adjust this value to add space on top (in pixels)

    // Scroll to the element with an offset
    const elementPosition = element.getBoundingClientRect().top + window.pageYOffset;
    const offsetPosition = elementPosition - offset;

    window.scrollTo({
        top: offsetPosition,
        behavior: "smooth"
    });
  });
</script>
