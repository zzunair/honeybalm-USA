<div class="section-content py-section-vertical-spacing px-section" data-color-scheme="primary">
  <div class="max-w-md mx-auto card-container">
    <div class="card p-5 lg:p-10 text-left mx-auto relative z-shape-divider">
      <h1 class="mb-2.5 heading2 strong">{{ 'customer.register.title' | t }}</h1>
      {%- assign formId = 'RegisterForm' -%}
      {% form 'create_customer', id: formId %}

        {% if form.errors %}
          <div class="mt-5" tabindex="-1">{{ form.errors | default_errors }}</div>
        {% endif %}

        <label for="FirstName" class="mt-5 mb-1 block font-secondary text-sm base">
          {{ 'customer.register.first_name' | t }}
        </label>
        <input type="text"
          class="w-full"
          name="customer[first_name]"
          id="FirstName"
          {% unless form.errors %}autofocus{% endunless %}
          {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>

        <label for="LastName" class="mt-5 mb-1 block font-secondary text-sm base">
          {{ 'customer.register.last_name' | t }}
        </label>
        <input type="text"
          class="w-full"
          name="customer[last_name]"
          id="LastName"
          {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>

        <label for="Email" class="mt-5 mb-1 block font-secondary text-sm base">
          {{ 'customer.register.email' | t }}
        </label>
        <input type="email"
          name="customer[email]"
          id="Email"
          class="w-full {% if form.errors contains 'email' %}border-scheme-accent-1{% endif %}"
          value="{% if form.email %}{{ form.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off">

        <label for="CreatePassword" class="mt-5 mb-1 block font-secondary text-sm base">
          {{ 'customer.register.password' | t }}
        </label>
        <input type="password"
          class="w-full {% if form.errors contains 'password' %}border-scheme-accent-1{% endif %}"
          name="customer[password]"
          id="CreatePassword">

        <div class="mt-5">
          <button type="submit" class="push-btn w-full">
            <span class="push-btn-surface w-full outline-btn justify-center">{{ 'customer.register.submit' | t }}
              <svg xmlns="http://www.w3.org/2000/svg" width="15" height="16" viewBox="0 0 15 16" fill="none">
                <path d="M7.3125 1.21875C7.4375 1.0625 7.6875 1.0625 7.84375 1.21875L14.375 7.75C14.5312 7.90625 14.5312 8.125 14.375 8.28125L7.84375 14.8125C7.6875 14.9688 7.4375 14.9688 7.3125 14.8125L6.6875 14.2188C6.53125 14.0625 6.53125 13.8125 6.6875 13.6875L11.5312 8.8125H0.875C0.65625 8.8125 0.5 8.65625 0.5 8.4375V7.5625C0.5 7.375 0.65625 7.1875 0.875 7.1875H11.5312L6.6875 2.34375C6.53125 2.21875 6.53125 1.96875 6.6875 1.8125L7.3125 1.21875Z" fill="black"></path>
              </svg>
            </span>
          </button>
        </div>

        <div class="text-center">
          <a class="mt-5 inline-block text-primary-accent-1 text-sm base" href="{{ routes.account_login_url }}">
            {{ 'customer.login.sign_in' | t }}
          </a>
        </div>
      {% endform %}
    </div>
    <div class="card-border"></div>
  </div>
</div>
