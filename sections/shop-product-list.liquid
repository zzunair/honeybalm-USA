                          {% elsif product.handle == 'favourites-pack' %}
                            {% assign original_price = product.selected_or_first_available_variant.price %}
                            {% assign discount_price = original_price | times: 0.5603 | ceil %}  
                            {{ discount_price | money }}
                          {% else %}
                           {{ prices3 | money }}
                          {% endif %} 
                        </span>
                      </span>
                    </button>

                  </form>
