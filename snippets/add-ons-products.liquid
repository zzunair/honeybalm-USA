          {% unless vdiscount == 0 %}
          <div class="pdp-off base normal upsell">{{ vdiscount }}% off</div>
          {% endunless %}
        <div class="base strong">{{ p2.title }}</div>
        {% render 'product_text', product: p2 %}
        <div class="base normal">{{ p2.price | money }}</div>
        </div>
        <form method="post" action="/cart/add">
          <input type="hidden" name="id" value="{{ p2.selected_or_first_available_variant.id }}" />
          {% render 'properties', product: p2 %}
          <button type="submit">
            <span class="push-btn-surface w-full outline-btn">
              Add to bag +
            </span>
          </button>
        </form>
      </div>
    </div>
  {% endif %}
  {% comment %}
  {% if section.settings.p3 != blank %}
    {% assign p3 = all_products[section.settings.p3] %}
