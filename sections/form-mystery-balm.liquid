<div class="contact-us-wrap pad2-mbl py-section-vertical-spacing">
  <div class="container">
    <div class="contact-us-innerWrap">
        <div class="con-lts">
          <div class="con-heading heading2 strong">{{ section.settings.hdng }}</div>
          <div class="con-text base normal">{{ section.settings.txt }}</div>
        </div>
        <div class="con-rts">
                    {%- liquid
            assign formId = 'MysteryForm'
            assign input_classes = 'w-full input'
            assign label_classes = 'mt-5 mb-1 block font-secondary text-sm'
          -%}
          {% form 'contact', id: formId, class: "outline-none" %}
            {% if form.posted_successfully? %}
              <p class="form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
            {% else %}
            {{ form.errors | default_errors }}
   
                <input type="text"
                  class="{{ input_classes }}"
                  name="contact[name]"
                  id="MysteryFormName"
                  required
                  placeholder="Name*"
                  aria-required="true">

                <input type="email"
                  name="contact[email]"
                  id="MysteryFormEmail"
                  class="{{ input_classes }} {% if form.errors contains 'email' %}border-theme-color{% endif %}"
                  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                  spellcheck="false"
                  autocomplete="off"
                  autocapitalize="off"
                  placeholder="Email*"
                  required
                  aria-required="true">
      
                <input type="text"
                  class="{{ input_classes }}"
                  name="contact[guess]"
                  id="MysteryFormGuess"
                  required
                  placeholder="Guess the flavor*"
                  aria-required="true">
            
                <div class="push-btn w-full">
                  <button type="submit" class="push-btn">
                    <span class="push-btn-surface w-full outline-btn">
                    {{ 'contact.form.send' | t }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="16" viewBox="0 0 15 16" fill="none">
                      <path d="M7.3125 1.21875C7.4375 1.0625 7.6875 1.0625 7.84375 1.21875L14.375 7.75C14.5312 7.90625 14.5312 8.125 14.375 8.28125L7.84375 14.8125C7.6875 14.9688 7.4375 14.9688 7.3125 14.8125L6.6875 14.2188C6.53125 14.0625 6.53125 13.8125 6.6875 13.6875L11.5312 8.8125H0.875C0.65625 8.8125 0.5 8.65625 0.5 8.4375V7.5625C0.5 7.375 0.65625 7.1875 0.875 7.1875H11.5312L6.6875 2.34375C6.53125 2.21875 6.53125 1.96875 6.6875 1.8125L7.3125 1.21875Z" fill="black"></path>
                    </svg>
                    </span>
                  </button>
                </div>
          {% endif %}
          {% endform %}
        </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Form Mystery Balm",
    "settings": [
      {
        "type": "text",
        "id": "hdng",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "txt",
        "label": "Text"
      }
    ],
    "presets": [
      {
        "name": "Form Mystery Balm",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}