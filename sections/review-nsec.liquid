<style>
  section.relative.ingredients.rev2-sec .section-content {
    padding-bottom: var(--section-vertical-spacing) !important;
    padding-top: var(--section-vertical-spacing) !important;
  }
  .rev2-sec.ingredients img {
    width: 100%;
    max-width: 100%;
    border-radius: 4px;
  }
  .rev2-sec.ingredients ul li{
    padding: 0px
  }
  .rev2-sec.ingredients ul{
    gap: 30px; 
  }
  .rev2_hdng{
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
  }
  .rev2-sec button.splide__arrow.splide__arrow--next.push-btn {
    width: 40px;
    height: 40px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: 1px solid var(--fade-border);
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 35px;
  }
  .rev2-sec button.hidden.splide__arrow.splide__arrow--prev.push-btn {
      display: none;
  }
  @media only screen and (max-width: 990px) {
    .rev2-sec.ingredients ul{
    gap: 0px; 
  }
    .rev2-sec .splide {
        margin: 0px -1.25rem;
      margin-top: 20px;
    }
    .rev2-sec .splide__slide {
        width: calc(100% - 44px) !important;
    }
    /* .rev2-sec button.splide__arrow{
      display: none;
    } */
  }
  .title-btn-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  .title-btn-wrap a{
      display: none;
    }
  .btm-rev-btn {
    margin-top: 0.8rem;
    text-align: center;
}
  .btm-rev-btn a {
    display: inline-block;
}
  @media only screen and (min-width: 990px) {
    .btm-rev-btn{
      display: none;
    }
    .title-btn-wrap a{
      display: block;
    }
    .rev2-sec button.splide__arrow.splide__arrow--next.push-btn{
      display: none !important;
    }
  }
  .prdct-rev-text{
    cursor: pointer;
  }
